<style > 
@font-face {
    font-family: 'LucideIcons';
    src: url('https://unpkg.com/lucide-static@latest/font/Lucide.ttf') format('truetype');
}
:root {
    --main-background-color: hsl({% if herocolor0 %} {{ herocolor0 }} {% else %} 202.4{% endif %}, 60%, 5%); /*rgba(9, 27, 38, 1);*/
    --secondary-background-color: hsl({% if herocolor0 %} {{ herocolor0 }} {% else %} 202.4{% endif %}, 40%, 10%);
    --tertiary-background-color: hsl({% if herocolor0 %} {{ herocolor0 }} {% else %} 202.4{% endif %}, 62%, 15%);
    --accent-color: hsl({% if herocolor0 %} {{ herocolor0 }} {% else %} 202.4{% endif %}, 40%, 50%);
    --border-color: hsl({% if herocolor0 %} {{ herocolor0 }} {% else %} 202.4{% endif %}, 40%, 20%);
    --text-color: #fff; /* Set a default text color */
    --link-color: #3498db; /* Set a default link color */
    --link-color-hover: #2980b9; /* Set a default link color on hover */
    --link-color-visited: #3498db; /* Set a default link color on visited */
    /* color and icon URL for the callout */
    --callout-tip-color: #3498db;
    --callout-tip-icon: "/assets/images/callout-tip.svg";
}
.background {
    display: flex;
    width: 100%;
    max-width: 100%;
    flex-direction: column;
    align-items: center;
    padding-top: 100px;
}
.center {
    display: flex;
    width: 1000px;
    max-width: 100%;
    flex-direction: column;
}
.banner {
    aspect-ratio: 2.63;
    object-fit: cover;
    object-position: center;
    width: 100%;
    float: left;
    overflow: hidden;
}

/* have a placeholder background color while the banner is loading */
.banner::before {
    content: "";
    display: block;
    width: 100%;
    padding-top: 38.5%;
    background-color: var(--main-background-color);
}
.content {
    box-shadow: 0 3px 3px 0 rgba(0, 0, 0, 0.16);
    background-color: var(--secondary-background-color);
    display: flex;
    position: relative;
    flex-direction: column;
    align-items: center;
    padding: 50px 80px;
}
.title {
    color: #ededed;
    text-align: center;
    margin-top: 18px;
    margin-bottom: 20px;
    max-width: 1378px;
    font: 200 50px Libre Caslon Display, -apple-system, Roboto, Helvetica, sans-serif;
}
.markdown-container {
    display: flex;
    flex-direction: column;
    position: relative;
    margin-top: 20px;
    height: 200px;
}
body {
    background-color: var(--main-background-color); /* Set the background color to the variable we defined above */
    color: white; /* Set text color to white */
    font-family: 'Ysabeau Infant', sans-serif; /* Updated default text font */
    margin: 0; /* Remove default body margin */
}
/* Update bold/heading styles to use Grenze Gotisch */
.title, 
h1, 
h2, 
h3, 
h1 {
    font-size: 4rem; /* Adjust h1 font size */
    margin-bottom: 16px; /* Add some bottom margin for spacing */
    font-family: 'Grenze Gotisch', sans-serif;
}
/* center the h2 text and underline */
h2 {
    font-size: 3rem; /* Adjust h2 font size */
    font-weight: bold; /* Make h2 text bold */
    margin: 20px; /* Add some bottom margin for spacing */
    text-align: center; /* Center the text */
    text-decoration: underline; /* Add an underline */
    text-decoration-color: var(--border-color); /* Set the underline color to the variable we defined above */
    text-decoration-thickness: 2px; /* Set the underline thickness */
    text-underline-offset: 4px; /* Offset the underline a bit */

}
h3 {
    font-size: 2rem; /* Adjust h3 font size */
    font-weight: bold; /* Make h3 text bold */
    margin-bottom: 10px; /* Add some bottom margin for spacing */
}
p {
    font-size: 1.5rem; /* Adjust paragraph font size */
    line-height: 1.5; /* Set the line height for better readability */
    margin-bottom: 20px; /* Add some bottom margin for spacing */
    text-align: justify; /* Justify the text */
}
/* p and ul should look the same */
ul, ol, li{
    font-size: 1.5rem; /* Adjust list font size */
    line-height: 1.5; /* Set the line height for better readability */
    margin-bottom: 20px; /* Add some bottom margin for spacing */
}
li {
    text-align: justify; /* Justify the text */
}
li::marker {
    content: 'Ó©';
    color: var(--accent-color); /* Set the list marker color to the variable we defined above */
}
a {
    color: var(--link-color); /* Set link color to the variable we defined above */
    text-decoration: none; /* Remove default underline styles */
}
a:hover {
    color: var(--link-color-hover); /* Set link color on hover to the variable we defined above */
    text-decoration: underline; /* Add underline on hover */
}
a:visited {
    color: var(--link-color-visited); /* Set link color on visited to the variable we defined above */
}
/* Callout container styles */
.callout {
    margin: 20px 0;
    padding: 10px;
    border-radius: 5px;
    background-color: rgba(255, 255, 255, 0.1);
    border-left: 8px solid #3498db;
}
/* Style callout bars by type */
.callout.info { border-left-color: #3498db; }
.callout.tip { border-left-color: #008080; }
.callout.warning { border-left-color: #FFA500; }
.callout.quote { border-left-color: #d3d3d3; }
.callout.read { border-left-color: #800080; }
.callout.seed { border-left-color: #008000; }
.callout.secret { border-left-color: #090909; }

/* Callout title styles */
.callout-title {
    margin: 0;
    font-size: 1.25rem;
    font-weight: bold;
    display: flex;
    align-items: center;
}
.callout-title .callout-icon {
    margin-right: 0.5em;
}

/* Hide duplicate overlay image */
.callout-title .overlay-image {
    display: none;
}

/* Color svg icons using CSS filters */
.callout.info .callout-icon {
    filter: invert(51%) sepia(99%) saturate(354%) hue-rotate(161deg) brightness(88%) contrast(95%);
}
.callout.tip .callout-icon {
    filter: invert(34%) sepia(92%) saturate(504%) hue-rotate(133deg) brightness(95%) contrast(101%);
}
.callout.warning .callout-icon {
    filter: invert(75%) sepia(61%) saturate(3894%) hue-rotate(360deg) brightness(103%) contrast(104%);
}
.callout.quote .callout-icon {
    filter: invert(78%) sepia(0%) saturate(0%) hue-rotate(49deg) brightness(108%) contrast(94%);
}
.callout.read .callout-icon {
    filter: invert(9%) sepia(96%) saturate(5483%) hue-rotate(296deg) brightness(85%) contrast(126%);
}
.callout.seed .callout-icon {
    filter: invert(20%) sepia(95%) saturate(4205%) hue-rotate(113deg) brightness(94%) contrast(101%);
}
.callout.secret .callout-icon {
    filter: invert(0%) sepia(0%) saturate(5720%) hue-rotate(147deg) brightness(78%) contrast(93%);
}

.callout.info.div.
/* Callout content styles */
.callout-content {
    margin: 0;
    font-size: 1rem;
    line-height: 1.5;
}
img {
    /* make sure the blurred image is visible behind the content */
    position: relative;
    object-fit: cover;
    object-position: center;
    max-width: 100%;
    max-height: 1000px;
    align: center;
}
.image-container {
    text-align: center;

}
/* Table styles */
table {
    border-collapse: collapse;
    width: 100%;
    margin-bottom: 20px;
}
th {
    text-align: left;
    padding: 8px;
    border-bottom: 1px solid var(--border-color);
}
td {
    text-align: left;
    padding: 8px;
    border-bottom: 1px solid var(--border-color);
}

.transition-main {
    opacity: 1;
    transition: 200ms;
}
html.is-animating .transition-main {
    opacity: 0;
}

</style>