{% set hueMain = herocolor0 or 202.4 %}
{% set hueBg = herocolor2 or hueMain %}
{% set bannerFinal = banner or (metadata and title and metadata[title] and metadata[title].banner) %}
<!doctype html>
<html lang="en" class="no-js">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title or metadata.siteTitle or "Skoria" }}</title>
    <meta name="theme-color" content="{{ hc0 }}, {{ hc1 }}, {{ hc2 }}" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;600;800&family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/static/site.css" />
    <script src="https://unpkg.com/swup@4" defer></script>
  </head>
  <body style="
    /* Background theme derived from hero color 2 (fallback to 0) */
    --main-background-color: hsl({{ hueBg }}, 60%, 5%);
    --secondary-background-color: hsl({{ hueBg }}, 40%, 10%);
    --tertiary-background-color: hsl({{ hueBg }}, 62%, 15%);
    /* Accent theme derived from primary hero color */
    --accent-fg: hsl({{ hueMain }}, 70%, 66%);
    --accent-fg-dim: hsl({{ hueMain }}, 55%, 60%);
  ">
    {% include "components/navbar.njk" %}

    <main class="site-main">
      <!-- hc 0/1/2 hold r g b and drive theme variables -->
      <div class="aurora">
        <div class="aurora-layer"></div>
        <div class="aurora-stars"></div>
      </div>
      <div id="swup" class="transition-fade" data-hue-main="{{ hueMain }}" data-hue-bg="{{ hueBg }}">
        <div class="container">
        {% if bannerFinal %}
          <div class="banner">
            <img src="{{ bannerFinal }}" alt="Banner for {{ title }}" />
          </div>
        {% endif %}
        <article class="prose">
          {% if title %}
            <header class="article-header">
              <h1 class="article-title">{{ title }}</h1>
            </header>
          {% endif %}
          {{ content | safe }}
        </article>
        </div>
      </div>
    </main>

    {% include "components/footer.njk" %}

    <script src="/static/site.js" defer></script>
  </body>
  </html>

