{% set hueMain = herocolor0 or 202.4 %}
{% set hueBg = herocolor2 or hueMain %}
{% set hero0 = herocolor0 or hueMain %}
{% set hero1 = herocolor1 or hueMain %}
{% set hero2 = herocolor2 or hueMain %}
{% set bannerFinal = banner or (metadata and title and metadata[title] and metadata[title].banner) %}
<!doctype html>
<html lang="en" class="no-js">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title or metadata.siteTitle or "Skoria" }}</title>
    <meta name="theme-color" content="{{ hc0 }}, {{ hc1 }}, {{ hc2 }}" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;600;800&family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/static/site.css" />
    <script src="https://unpkg.com/swup@4" defer></script>
  </head>
  <body style="
    /* Background theme derived from hero color 2 (fallback to 0) */
    --main-background-color: hsl({{ hueBg }}, 60%, 5%);
    --secondary-background-color: hsl({{ hueBg }}, 40%, 10%);
    --tertiary-background-color: hsl({{ hueBg }}, 62%, 15%);
    /* Accent theme derived from primary hero color */
    --accent-fg: hsl({{ hueMain }}, 70%, 66%);
    --accent-fg-dim: hsl({{ hueMain }}, 55%, 60%);
    
    /* Hero color variables with variations */
    --hero0: hsl({{ hero0 or hueMain }}, 70%, 50%);
    --hero0-dark: hsl({{ hero0 or hueMain }}, 70%, 30%);
    --hero0-light: hsl({{ hero0 or hueMain }}, 70%, 70%);
    --hero0-saturated: hsl({{ hero0 or hueMain }}, 90%, 50%);
    
    --hero1: hsl({{ hero1 or hueMain }}, 70%, 50%);
    --hero1-dark: hsl({{ hero1 or hueMain }}, 70%, 30%);
    --hero1-light: hsl({{ hero1 or hueMain }}, 70%, 70%);
    --hero1-saturated: hsl({{ hero1 or hueMain }}, 90%, 50%);
    
    --hero2: hsl({{ hero2 or hueBg }}, 70%, 50%);
    --hero2-dark: hsl({{ hero2 or hueBg }}, 70%, 30%);
    --hero2-light: hsl({{ hero2 or hueBg }}, 70%, 70%);
    --hero2-saturated: hsl({{ hero2 or hueBg }}, 90%, 50%);
  ">
    {% include "components/navbar.njk" %}

    <!-- Aurora background - lowest layer, outside swup containers -->
    <div class="aurora" data-hue-bg="{{ hueBg }}" data-hero0="{{ hero0 }}" data-hero1="{{ hero1 }}" data-hero2="{{ hero2 }}">
      <div class="aurora-layer"></div>
      <div class="aurora-stars"></div>
    </div>

    <!-- Banner layer - middle layer -->
    <div id="swup-banner" class="swup-container" data-hue-main="{{ hueMain }}" data-hue-bg="{{ hueBg }}" data-hero0="{{ hero0 }}" data-hero1="{{ hero1 }}" data-hero2="{{ hero2 }}">
      {% if bannerFinal %}
        <div class="banner">
          <img src="{{ bannerFinal }}" alt="Banner for {{ title }}" />
        </div>
      {% endif %}
    </div>

    <!-- Content layer - top layer -->
    <main class="site-main">
      <div id="swup" class="transition-fade" data-hue-main="{{ hueMain }}" data-hue-bg="{{ hueBg }}" data-hero0="{{ hero0 }}" data-hero1="{{ hero1 }}" data-hero2="{{ hero2 }}">
        <div class="container">
        <!-- Debug: password={{ password }}, passwordhint={{ passwordhint }} -->
        <!-- DEBUG: password={{ password }}, passwordhint={{ passwordhint }}, all data: {{ page.data | dump }} -->
        <article class="prose" data-password="{{ password }}" data-password-hint="{{ passwordhint }}">
          {% if title %}
            <header class="article-header">
              <h1 class="article-title">{{ title }}</h1>
            </header>
          {% endif %}
          {{ content | safe }}
        </article>
        </div>
      </div>
    </main>

    <!-- Password protection overlay -->
    <div class="password-overlay" id="passwordOverlay">
      <div class="password-form">
        <p id="passwordHint">This content is protected. Please enter the password to continue.</p>
        <input type="password" id="passwordInput" class="password-input" placeholder="Enter password..." />
        <button id="passwordSubmit" class="password-submit">Unlock</button>
        <div id="passwordError" class="password-error">Incorrect password. Please try again.</div>
      </div>
    </div>

    {% include "components/footer.njk" %}

    <script src="/static/site.js" defer></script>
  </body>
  </html>

